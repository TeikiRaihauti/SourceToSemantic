		<Input name="TMIN" description="Daily minimum air temperature" inputtype="variable" variablecategory="exogenous" datatype="DOUBLE" max="-" min="-" default="-" unit="deg C" uri="-"/>
		<Input name="TAV" description="Long-term average air temperature" inputtype="parameter" parametercategory="constant" datatype="DOUBLE" max="-" min="-" default="-" unit="deg C" uri="-"/>
		<Input name="MULCHMASS" description="Surface mulch mass" inputtype="variable" variablecategory="exogenous" datatype="DOUBLE" max="-" min="-" default="-" unit="kg/ha" uri="-"/>
		<Input name="SNOW" description="Snow water equivalent" inputtype="variable" variablecategory="exogenous" datatype="DOUBLE" max="-" min="-" default="-" unit="mm" uri="-"/>
		<Input name="RAIN" description="Daily rainfall" inputtype="variable" variablecategory="exogenous" datatype="DOUBLE" max="-" min="-" default="-" unit="mm" uri="-"/>
		<Input name="DEPIR" description="Irrigation depth equivalent" inputtype="variable" variablecategory="exogenous" datatype="DOUBLE" max="-" min="-" default="-" unit="mm" uri="-"/>
		<Input name="BIOMAS" description="Aboveground biomass" inputtype="variable" variablecategory="exogenous" datatype="DOUBLE" max="-" min="-" default="-" unit="kg/ha" uri="-"/>
		<Input name="CUMDPT" description="Total profile depth" inputtype="parameter" parametercategory="constant" datatype="DOUBLE" max="-" min="-" default="-" unit="mm" uri="-"/>
		<Input name="DSMID" description="Depth to mid-point of each layer" inputtype="parameter" parametercategory="constant" datatype="DOUBLELIST" len="NLAYR" max="-" min="-" default="-" unit="mm" uri="-"/>
		<Input name="TDL" description="Running sum of DUL*DLAYR, used when ISWWAT != 'Y'" inputtype="variable" variablecategory="state" datatype="DOUBLE" max="-" min="-" default="-" unit="cm" uri="-"/>
		<Input name="TMA" description="Temperature memory array" inputtype="variable" variablecategory="state" datatype="DOUBLELIST" len="5" max="-" min="-" default="-" unit="deg C" uri="-"/>
		<Input name="NDays" description="Count of wet-day records currently stored (&lt;=30)" inputtype="variable" variablecategory="state" datatype="INT" max="30" min="-" default="-" unit="-" uri="-"/>
		<Input name="WetDay" description="30-day wet-day memory (0/1 values)" inputtype="variable" variablecategory="state" datatype="INTARRAY" max="-" min="-" default="-" unit="-" uri="-"/>
		<Input name="X2_PREV" description="Previous X2 average used for surface cover blending" inputtype="variable" variablecategory="state" datatype="DOUBLE" max="-" min="-" default="-" unit="deg C" uri="-"/>
		<Input name="SRFTEMP" description="Surface temperature" inputtype="variable" variablecategory="state" datatype="DOUBLE" max="-" min="-" default="-" unit="deg C" uri="-"/>
		<Input name="ST" description="Soil temperature by layer" inputtype="variable" variablecategory="state" datatype="DOUBLELIST" len="NLAYR" max="-" min="-" default="-" unit="deg C" uri="-"/>
	</Inputs>
