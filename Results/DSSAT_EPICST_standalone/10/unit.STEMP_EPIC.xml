		<Output name="SRFTEMP_out" description="Updated surface temperature" variablecategory="state" datatype="DOUBLE" max="-" min="-" unit="deg C" uri="-"/>
		<Output name="ST_out" description="Updated soil temperature by layer" variablecategory="state" datatype="DOUBLELIST" len="NLAYR" max="-" min="-" unit="deg C" uri="-"/>
	</Outputs>
