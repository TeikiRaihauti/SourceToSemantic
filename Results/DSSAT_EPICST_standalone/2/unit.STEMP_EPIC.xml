	<Function name="SOILT_EPIC" description="Layer-by-layer soil temperature computation with water content and surface cover effects; updates TMA, SRFTEMP, ST, and X2_PREV." language="cyml" type="external" filename="algo/pyx/SOILT_EPIC.pyx"/>
	<Algorithm language="cyml" platform="" filename="algo/pyx/STEMP_EPIC.pyx"/>
	<Parametersets>
		<Parameterset name="p_test_STEMP_EPIC_basic" description="Initializes model and executes five daily updates; verifies array lengths and types.">
