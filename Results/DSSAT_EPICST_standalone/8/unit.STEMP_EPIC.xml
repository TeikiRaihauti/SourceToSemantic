	<Function name="SOILT_EPIC" description="EPIC soil temperature by layer; updates 5-day memory, surface temperature, and layer temperatures." language="cyml" type="external" filename="algo/pyx/SOILT_EPIC.pyx"/>
	<Algorithm language="cyml" platform="" filename="algo/pyx/STEMP_EPIC.pyx"/>
