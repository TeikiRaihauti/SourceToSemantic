                },
                {
                    "name": "CONTROL_RUN",
                    "value": "1"
                },
                {
                    "name": "CONTROL_RNMODE",
                    "value": "B"
                },
                {
                    "name": "ISWITCH_ISWWAT",
                    "value": "Y"
                },
                {
                    "name": "SOILPROP_NLAYR",
                    "value": "4"
                },
                {
                    "name": "SOILPROP_BD",
                    "value": [
                        1.6,
