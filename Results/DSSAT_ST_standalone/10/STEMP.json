    "functions": [
        {
            "name": "STEMP",
            "description": "Top-level subroutine: handles initialization and daily-rate logic, prepares inputs and calls SOILT to compute soil temperatures; also calls OPSTEMP for output and YR_DOY to get DOY."
        },
        {
            "name": "SOILT",
            "description": "Subroutine that computes soil temperature profile ST(L) and surface temperature SRFTEMP using damping depth formulation and a soil-water corrected damping depth."
        },
        {
            "name": "YR_DOY",
            "description": "Subroutine that converts YRDOY integer (YYYYDDD) into YEAR and DOY (day of year)."
        },
        {
            "name": "OPSTEMP",
            "description": "Output routine that produces daily soil temperature output file (SoilTemp.OUT) and writes ST and SRFTEMP when requested."
        },
        {
            "name": "ModuleDefs",
            "description": "Module defining constants and derived types used by STEMP/SOILT (e.g., NL, ControlType, SwitchType, SoilType) and providing shared definitions."
        },
        {
            "name": "ASKEE",
            "description": "Standalone program (test harness) included in repository to demonstrate calling STEMP with example control, switch and soil property values."
        }
