{
    "metadata": {
        "Title": "STEMP",
        "Authors": "DSSAT (DSSAT Florida)",
        "Institution": "University of Georgia; University of Florida; Iowa State University; International Center for Soil Fertility and Agricultural Development; University of Guelph",
        "URI": "-",
        "DOI": "https://doi.org/10.2134/agronj1994.00021962008600060014x",
        "Extended description": "Calculates soil temperature profile by soil layer and surface litter temperature using a damping-depth approach (Parton & Logan) with correction for soil water content. Includes seasonal initialization and daily-rate updates; main computation performed in SOILT called from STEMP.",
        "Short description": "Determines soil temperature by layer",
        "Model version": "1.0"
    },
    "init": {
        "name": "STEMP",
        "firstLine": "SWI = SW",
        "lastLine": "END DO"
    },
    "process": {
        "name": "STEMP",
        "description": "Main subroutine that orchestrates initialization and daily-rate calculations for soil temperature and calls SOILT to compute the soil temperature profile and surface temperature.",
        "firstLine": "TBD = 0.0",
        "lastLine": "CALL SOILT ( ALBEDO, B, CUMDPT, DOY, DP, HDAY, NLAYR, PESW, SRAD, TAMP, TAV, TAVG, TMAX, WW, DSMID, ATOT, TMA, SRFTEMP, ST)"
    },
