{
    "metadata": {
        "Title": "SoilTemperatureSWAT",
        "Authors": "Simone Bregaglio (simone.bregaglio@unimi.it); Nicolò Frasso (nicolo.frasso@unimi.it)",
        "Institution": "University Of Milan",
        "URI": "http://bioma.jrc.ec.europa.eu/ontology/JRC_MARS_biophysical_domain.owl",
        "DOI": "-",
        "Extended description": "Strategy for the calculation of soil temperature with SWAT method. Reference: Neitsch,S.L., Arnold, J.G., Kiniry, J.R., Williams, J.R., King, K.W. Soil and Water Assessment Tool. Theoretical documentation. Version 2000. http://swatmodel.tamu.edu/media/1290/swat2000theory.pdf",
        "Short description": "Strategy for the calculation of soil temperature with SWAT method",
        "Model version": "001"
    },
    "init": {
        "name": "Init",
        "firstLine": "states.SoilTemperatureByLayers = new double[states.LayerThickness.Length];",
        "lastLine": "states.SoilTemperatureByLayers[i] = 15;"
    },
    "process": {
        "name": "Estimate",
        "description": "Run the strategy to calculate the outputs. In case of error during the execution, the preconditions tests are executed.",
        "firstLine": "double _SoilProfileDepthmm = states.SoilProfileDepth * 1000;",
        "lastLine": "states.SurfaceSoilTemperature);"
    },
    "inputs": [
        {
            "name": "SoilProfileDepth",
            "description": "Soil profile depth",
            "inputtype": "variable",
            "category": "state",
            "datatype": "DOUBLE",
            "len": "-",
            "min": 0,
            "max": 50,
            "default": 3,
            "unit": "m",
            "uri": ""
        },
        {
            "name": "SurfaceSoilTemperature",
            "description": "Average surface soil temperature",
            "inputtype": "variable",
            "category": "state",
            "datatype": "DOUBLE",
            "len": "-",
            "min": -60,
            "max": 60,
            "default": 25,
            "unit": "°C",
            "uri": ""
        },
        {
            "name": "AirTemperatureAnnualAverage",
            "description": "Annual average air temperature",
            "inputtype": "variable",
            "category": "exogenous",
            "datatype": "DOUBLE",
            "len": "-",
            "min": -40,
            "max": 50,
            "default": 15,
            "unit": "°C",
            "uri": ""
        },
        {
            "name": "SoilTemperatureByLayers",
            "description": "Soil temperature of each layer",
            "inputtype": "variable",
            "category": "state",
            "datatype": "DOUBLEARRAY",
            "len": "-",
            "min": -60,
            "max": 60,
            "default": 15,
            "unit": "°C",
            "uri": ""
        },
        {
            "name": "BulkDensity",
            "description": "Bulk density",
            "inputtype": "variable",
            "category": "state",
            "datatype": "DOUBLEARRAY",
            "len": "-",
            "min": 0.9,
            "max": 1.8,
            "default": 1.3,
            "unit": "t m-3",
            "uri": ""
        },
        {
            "name": "VolumetricWaterContent",
            "description": "Volumetric soil water content",
            "inputtype": "variable",
            "category": "state",
            "datatype": "DOUBLEARRAY",
            "len": "-",
            "min": 0,
            "max": 0.8,
            "default": 0.25,
            "unit": "m3 m-3",
            "uri": ""
        },
        {
            "name": "LayerThickness",
            "description": "Soil layer thickness",
            "inputtype": "variable",
            "category": "state",
            "datatype": "DOUBLEARRAY",
            "len": "-",
            "min": 0.005,
            "max": 3,
            "default": 0.05,
            "unit": "m",
            "uri": ""
        },
        {
            "name": "LagCoefficient",
            "description": "Lag coefficient that controls the influence of the previous day's temperature on the current day's temperature",
            "inputtype": "parameter",
            "category": "constant",
            "datatype": "DOUBLE",
            "len": "-",
            "min": 0,
            "max": 1,
            "default": 0.8,
            "unit": "dimensionless",
            "uri": ""
        }
    ],
    "outputs": [
        {
            "name": "SoilTemperatureByLayers",
            "description": "Soil temperature of each layer",
            "datatype": "DOUBLEARRAY",
            "category": "state",
            "len": "-",
            "min": -60,
            "max": 60,
            "default": 15,
            "unit": "°C",
            "uri": ""
        }
    ],
    "functions": [
        {
            "name": "Math.Exp",
            "description": "Exponential function (e^x)"
        },
        {
            "name": "Math.Log",
            "description": "Natural logarithm"
        },
        {
            "name": "Math.Pow",
            "description": "Power function (x^y)"
        }
    ],
    "tests": [
        {
            "name": "-",
            "description": "-",
            "inputs": [
                {
                    "name": "-",
                    "value": "-"
                }
            ],
            "outputs": [
                {
                    "name": "-",
                    "value": "-"
                }
            ]
        }
    ]
}