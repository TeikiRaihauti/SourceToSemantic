{
    "init": {
        "name": "Init"
    },
    "process": {
        "name": "CalculateModel",
        "description": "Calculate minimum and maximum soil temperature and update deep layer temperature."
    },
    "inputs": [
        {
            "name": "exogenous_meanAnnualAirTemp",
            "description": "Mean annual air temperature used to initialize deep soil layer temperature",
            "inputtype": "variable",
            "category": "exogenous",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "°C",
            "uri": "-"
        },
        {
            "name": "deeplayerstates_deepLayerT",
            "description": "Deep soil layer temperature from previous step",
            "inputtype": "variable",
            "category": "state",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "°C",
            "uri": "-"
        },
        {
            "name": "exogenous_maxTAir",
            "description": "Daily maximum air temperature",
            "inputtype": "variable",
            "category": "exogenous",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "°C",
            "uri": "-"
        },
        {
            "name": "exogenous_meanTAir",
            "description": "Daily mean air temperature",
            "inputtype": "variable",
            "category": "exogenous",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "°C",
            "uri": "-"
        },
        {
            "name": "exogenous_minTAir",
            "description": "Daily minimum air temperature",
            "inputtype": "variable",
            "category": "exogenous",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "°C",
            "uri": "-"
        },
        {
            "name": "ratesexternal_heatFlux",
            "description": "Soil heat flux as water mass equivalent",
            "inputtype": "variable",
            "category": "rate",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "g m-2 d-1",
            "uri": "-"
        },
        {
            "name": "lambda_",
            "description": "Latent heat of vaporization at 20°C",
            "inputtype": "parameter",
            "category": "constant",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": 2.454,
            "unit": "MJ kg-1",
            "uri": "-"
        }
    ],
    "outputs": [
        {
            "name": "states_minTSoil",
            "description": "Minimum soil temperature",
            "datatype": "DOUBLE",
            "category": "state",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "°C",
            "uri": "-"
        },
        {
            "name": "states_maxTSoil",
            "description": "Maximum soil temperature",
            "datatype": "DOUBLE",
            "category": "state",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "°C",
            "uri": "-"
        },
        {
            "name": "deeplayerstates_deepLayerT",
            "description": "Deep soil layer temperature (updated)",
            "datatype": "DOUBLE",
            "category": "state",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "°C",
            "uri": "-"
        }
    ],
    "functions": [
        {
            "name": "SoilMinimumTemperature",
            "description": "Compute soil minimum temperature (°C)."
        },
        {
            "name": "SoilMaximumTemperature",
            "description": "Compute soil maximum temperature (°C)."
        },
        {
            "name": "SoilTempA",
            "description": "Soil temperature contribution A (°C), driven by available energy and mean air temperature."
        },
        {
            "name": "SoilTempB",
            "description": "Soil temperature contribution B (°C), average of minimum air temp and deep layer temp."
        },
        {
            "name": "UpdateTemperature",
            "description": "Update deep soil layer temperature (°C) using a 10-day exponential smoothing equivalent."
        }
    ],
    "tests": [
        {
            "name": "-",
            "description": "-",
            "inputs": [
                {
                    "name": "-",
                    "value": "-"
                }
            ],
            "outputs": [
                {
                    "name": "-",
                    "value": "-"
                }
            ]
        }
    ],
    "comments": [
        {
            "comment": "states_minTSoil and states_maxTSoil are treated as state outputs because they are returned each step, though they may be transient."
        },
        {
            "comment": "deeplayerstates_deepLayerT is a true state variable and is listed as both input and output."
        },
        {
            "comment": "CalculateModel applies a sentinel check (maxTAir == -999 and minTAir == 999) to output sentinel soil temperatures and reset deep layer temperature to 0.0."
        }
    ]
}