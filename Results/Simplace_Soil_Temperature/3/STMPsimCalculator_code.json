{
    "init": {
        "name": "init"
    },
    "process": {
        "name": "process",
        "description": "Main daily process for STMPsimCalculator updating soil temperature profile."
    },
    "inputs": [
        {
            "name": "iDoInitialize",
            "description": "Boolean flag; if True, re-initialize states using init",
            "inputtype": "variable",
            "category": "exogenous",
            "datatype": "INT",
            "len": "-",
            "min": "0",
            "max": "1",
            "default": "-",
            "unit": "-",
            "uri": "-"
        },
        {
            "name": "cSoilLayerDepth",
            "description": "Depths (m) to the bottom of each existing soil layer",
            "inputtype": "parameter",
            "category": "constant",
            "datatype": "DOUBLELIST",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "m",
            "uri": "-"
        },
        {
            "name": "cFirstDayMeanTemp",
            "description": "Mean air temperature on the first day",
            "inputtype": "parameter",
            "category": "constant",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "degC",
            "uri": "-"
        },
        {
            "name": "cAVT",
            "description": "Long-term average annual air temperature",
            "inputtype": "parameter",
            "category": "constant",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "degC",
            "uri": "-"
        },
        {
            "name": "cABD",
            "description": "Average soil bulk density",
            "inputtype": "parameter",
            "category": "constant",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "t m-3",
            "uri": "-"
        },
        {
            "name": "cDampingDepth",
            "description": "Initial damping depth of soil used for initialization",
            "inputtype": "parameter",
            "category": "constant",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "m",
            "uri": "-"
        },
        {
            "name": "iSoilWaterContent",
            "description": "Water stored in the soil profile",
            "inputtype": "variable",
            "category": "exogenous",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "mm",
            "uri": "-"
        },
        {
            "name": "iSoilSurfaceTemperature",
            "description": "Soil surface temperature",
            "inputtype": "variable",
            "category": "exogenous",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "degC",
            "uri": "-"
        },
        {
            "name": "SoilTempArray",
            "description": "Current state soil temperature array",
            "inputtype": "variable",
            "category": "state",
            "datatype": "DOUBLELIST",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "degC",
            "uri": "-"
        },
        {
            "name": "pSoilLayerDepth",
            "description": "Derived depths including additional layers (to damping depth)",
            "inputtype": "variable",
            "category": "state",
            "datatype": "DOUBLELIST",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "m",
            "uri": "-"
        }
    ],
    "outputs": [
        {
            "name": "SoilTempArray",
            "description": "Updated soil temperature at layer centers after the step",
            "datatype": "DOUBLELIST",
            "category": "state",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "degC",
            "uri": "-"
        },
        {
            "name": "pSoilLayerDepth",
            "description": "Possibly re-initialized derived layer depths (unchanged unless re-initialized)",
            "datatype": "DOUBLELIST",
            "category": "state",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "m",
            "uri": "-"
        }
    ],
    "functions": [
        {
            "name": "_compute_damping_depth",
            "description": "Compute DP, WC, and DD (damping depth) according to APEX equations."
        }
    ],
    "tests": [
        {
            "name": "test_STMPsimCalculator_case0",
            "description": "Derived test initializing states and running one process step; verifies SoilTempArray values.",
            "inputs": [
                {
                    "name": "cSoilLayerDepth",
                    "value": [
                        0.1,
                        0.5,
                        1.5
                    ]
                },
                {
                    "name": "cFirstDayMeanTemp",
                    "value": 15.0
                },
                {
                    "name": "cAVT",
                    "value": 9.0
                },
                {
                    "name": "cABD",
                    "value": 1.4
                },
                {
                    "name": "cDampingDepth",
                    "value": 6.0
                },
                {
                    "name": "iSoilWaterContent",
                    "value": 0.3
                },
                {
                    "name": "iSoilSurfaceTemperature",
                    "value": 6.0
                },
                {
                    "name": "iDoInitialize",
                    "value": false
                }
            ],
            "outputs": [
                {
                    "name": "SoilTempArray",
                    "value": [
                        13.624360856350041,
                        13.399968504634286,
                        12.599999999999845,
                        12.2,
                        11.4,
                        10.6,
                        9.799999999999999,
                        9.0
                    ]
                }
            ]
        }
    ]
}