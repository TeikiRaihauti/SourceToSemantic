{
    "metadata": {
        "Title": "STMPsimCalculator",
        "Authors": "Andreas Enders; Gunther Krauss",
        "Institution": "Crop Science Group, Katzenburgweg 5, 53115 Bonn, Germany",
        "URI": "-",
        "DOI": "-",
        "Extended description": "Calculates daily average soil temperature at the center of each soil layer using a damping-depth approach (Williams & Izaurralde 2005). Soil surface temperature, damping depth (function of bulk density and soil water content), and a lag weighting of previous day temperatures are used to update layer temperatures.",
        "Short description": "Calculates the soil temperature in n layers depending on climate and soil conditions.",
        "Model version": "-"
    },
    "init": {
        "name": "init",
        "firstLine": "Double[] Z = cSoilLayerDepth.getValue();",
        "lastLine": "pSoilLayerDepth.setValue(tz, this);"
    },
    "process": {
        "name": "process",
        "description": "Compute daily soil temperature update for each soil layer: compute damping depth, temperature change rate and update SoilTempArray and rSoilTempArrayRate.",
        "firstLine": "Double[] tZp = pSoilLayerDepth.getValue();",
        "lastLine": "SoilTempArray.setArrayValue(i, SoilTempArray.getValue()[i] + rSoilTempArrayRate.getValue()[i], this);"
    },
    "inputs": [
        {
            "name": "cSoilLayerDepth",
            "description": "Depth of soil layer",
            "inputtype": "parameter",
            "category": "constant",
            "datatype": "DOUBLEARRAY",
            "len": "-",
            "min": 0.03,
            "max": 20,
            "default": "-",
            "unit": "metre",
            "uri": "http://www.wurvoc.org/vocabularies/om-1.8/metre"
        },
        {
            "name": "cFirstDayMeanTemp",
