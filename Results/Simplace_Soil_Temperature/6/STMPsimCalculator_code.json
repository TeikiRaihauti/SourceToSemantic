        {
            "name": "iSoilSurfaceTemperature",
            "description": "Soil surface temperature",
            "inputtype": "variable",
            "category": "exogenous",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "degC",
            "uri": "-"
        },
        {
            "name": "iDoInitialize",
            "description": "Flag to re-initialize state before processing (True=1, False=0)",
            "inputtype": "variable",
            "category": "exogenous",
            "datatype": "INT",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "0",
            "unit": "-",
            "uri": "-"
