    "outputs": [
        {
            "name": "SoilTempArray",
            "description": "Updated soil temperatures per layer after one time step",
            "datatype": "DOUBLELIST",
            "category": "state",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "degC",
            "uri": "-"
