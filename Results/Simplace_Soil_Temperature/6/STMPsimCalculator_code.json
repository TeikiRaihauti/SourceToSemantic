{
    "init": {
        "name": "init"
    },
    "process": {
        "name": "process",
        "description": "Update soil temperature profile by computing damping depth and daily temperature changes per layer; can reinitialize state if requested."
    },
    "inputs": [
        {
            "name": "cSoilLayerDepth",
            "description": "Depths to the bottom of measured soil layers",
            "inputtype": "parameter",
            "category": "constant",
            "datatype": "DOUBLELIST",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "m",
            "uri": "-"
        },
        {
            "name": "cFirstDayMeanTemp",
            "description": "Mean air temperature on first day",
            "inputtype": "parameter",
            "category": "constant",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "degC",
            "uri": "-"
        },
        {
            "name": "cAVT",
            "description": "Constant temperature of deepest soil layer (long-term mean air temperature)",
            "inputtype": "parameter",
            "category": "constant",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "degC",
            "uri": "-"
        },
        {
            "name": "cDampingDepth",
            "description": "Damping depth of soil",
            "inputtype": "parameter",
            "category": "constant",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "m",
            "uri": "-"
        },
        {
            "name": "SoilTempArray",
            "description": "Current soil temperatures per layer",
            "inputtype": "variable",
            "category": "state",
            "datatype": "DOUBLELIST",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "degC",
            "uri": "-"
        },
        {
            "name": "rSoilTempArrayRate",
            "description": "Current daily temperature change rates per layer",
            "inputtype": "variable",
            "category": "rate",
            "datatype": "DOUBLELIST",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "degC d-1",
            "uri": "-"
        },
        {
            "name": "pSoilLayerDepth",
            "description": "Depths to the bottom of layers including additional layers up to damping depth",
            "inputtype": "variable",
            "category": "state",
            "datatype": "DOUBLELIST",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "m",
            "uri": "-"
        },
        {
            "name": "cABD",
            "description": "Average soil bulk density",
            "inputtype": "parameter",
            "category": "constant",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "t m-3",
            "uri": "-"
        },
        {
            "name": "iSoilWaterContent",
            "description": "Sum of water content of the whole soil profile",
            "inputtype": "variable",
            "category": "exogenous",
            "datatype": "DOUBLE",
            "len": "-",
            "min": "-",
            "max": "-",
            "default": "-",
            "unit": "mm",
            "uri": "-"
