	<Function name="model_layers_temp" description="Calculates soil layers' mean temperatures from the 1-cm profile." language="cyml" type="external" filename="algo/pyx/model_layers_temp.pyx"/>
	<Function name="model_temp_profile" description="Calculates soil temperature profile." language="cyml" type="external" filename="algo/pyx/model_temp_profile.pyx"/>
	<Function name="model_update" description="Updates previous state variables." language="cyml" type="external" filename="algo/pyx/model_update.pyx"/>
	<Algorithm language="cyml" platform="" filename="algo/pyx/model_soil_temp.pyx"/>
